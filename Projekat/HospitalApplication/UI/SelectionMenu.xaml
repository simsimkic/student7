<Window x:Class="HospitalApplication.UI.SelectionMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalApplication.UI"
        mc:Ignorable="d"
        Title="SelectionMenu" Height="450" Width="450" Closed="Window_Closed">
    <Grid>
        <Button x:Name="patient_btn" Content="Patient" HorizontalAlignment="Left" Margin="120,170,0,0" VerticalAlignment="Top" Width="210" Height="40" Click="patient_btn_Click"/>
        <Button x:Name="doctor_btn" Content="Doctor" HorizontalAlignment="Left" Margin="120,220,0,0" VerticalAlignment="Top" Width="210" Height="40" Click="doctor_btn_Click"/>
        <Button x:Name="secretary_btn" Content="Secretary" HorizontalAlignment="Left" Margin="120,270,0,0" VerticalAlignment="Top" Width="210" Height="40" Click="secretary_btn_Click"/>
        <Button x:Name="hospitalManager_btn" Content="HospitalManager" HorizontalAlignment="Left" Margin="120,120,0,0" VerticalAlignment="Top" Width="210" Height="40" Click="hospitalManager_btn_Click"/>
        <Button x:Name="back_btn" Content="Back" HorizontalAlignment="Left" Margin="185,380,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
